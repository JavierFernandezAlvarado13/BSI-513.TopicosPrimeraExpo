@model PrimeraExpo.ViewModels.FacturaViewModels.CrearViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Crear";
}

@{
    if (ViewBag.Confirmacion != null)
    {
        <br />
        <div class="alert alert-success">
            <strong>@ViewBag.Confirmacion</strong> Factura registrada en la DB!!
        </div>
    }
}

<div class="row">
    <div class="col-xs-12">
        <h3>Formulario para la creacion de una factura</h3>
    </div>
</div>

@using (Html.BeginForm())
{
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(model => model.ListaItems)
            @Html.DropDownListFor(model => model.PersonaId, new SelectList(Model.ListaItems, "Value", "Text"), "Seleccione una Persona", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion)
            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Precio)
            @Html.TextBoxFor(model => model.Precio, new { @class = "form-control" })
        </div>
        <input type="submit" value="Crear" class="btn btn-primary" />
    </fieldset>
}